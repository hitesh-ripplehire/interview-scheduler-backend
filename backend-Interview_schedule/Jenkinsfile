pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/hitesh-ripplehire/interview-scheduler-backend.git'
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend-Interview_schedule') {
                    sh '''
                    # Build the project with Maven
                    mvn clean install
                    '''
                }
            }
        }
        stage('Deploy Backend') {
            steps {
                dir('backend-Interview_schedule') {
                    sh '''
                    # Stop any existing instance of the application
                    if pgrep -f "java -jar target/.*.jar"; then
                        pkill -f "java -jar target/.*.jar"
                        echo "Stopped the existing backend process."
                    fi

                    # Run the server in the background
                    nohup java -jar target/*.jar > backend.log 2>&1 &

                    echo "Backend deployed successfully and running."
                    '''
                }
            }
        }
    }
    post {
        success {
            echo "Backend build and deployment completed successfully!"
        }
        failure {
            echo "Backend build or deployment failed."
        }
    }
}
