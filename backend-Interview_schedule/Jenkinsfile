pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/hitesh-ripplehire/interview-scheduler-backend.git'
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend-Interview_schedule') {
                    sh '''
                    # Install dependencies
                    mvn clean install
                    '''
                }
            }
        }
        
       stage('Run Backend') {
            steps {
                dir('backend-Interview_schedule') {
                    sh '''
                    # Start the server
                    java -jar target/*.jar &
                    '''
                }
            }
        }
    }
}
